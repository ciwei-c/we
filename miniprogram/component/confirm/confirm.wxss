.i-confirm-container{
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: none;
  z-index: 100;
}
.i-confirm-wrap {
  position: relative;
  height: 100%;
  width: 100%;
}
.i-confirm-box {
  position: absolute;
  width: 70%;
  top: 40%;
  left: 50%;
  transform: translate(-50%,-50%);
  background: #fff;
  border-radius:2px;
  padding-top: 10px;
}
.i-confirm-show{
  display: block !important;
  animation: show 0.5s linear;
}
@keyframes show {
  0% {
    opacity: 0;
  }
  100%{
    opacity: 1;
  }
}